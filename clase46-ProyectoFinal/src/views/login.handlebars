<main class="login">
    <div class="div-form-left">
        <h1 class="title-login">Ingresá tu e-mail, teléfono o usuario de Mercado Libre</h1>
        <hr class="grey">
    </div>
    <div class="div-form-right">
        <div>
        <form class="forms" id="login-form" action="/session/login" method="post" enctype="multipart/form-data">
            <label for="email">Correo</label>
            <input type="email" name="email" id="email" placeholder="Ingrese su correo" required>

            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" placeholder="Ingrese su contraseña" required>
            
            <button type="submit">Ingresar</button>
            <a class="btn" href="/session/github">Ingresar con Github</a>
            <a class="btn-cuenta" href="/session/register">Crear cuenta</a>
        </form>
        </div>
    </div>
</main>

<script src="/js/login.js"></script>